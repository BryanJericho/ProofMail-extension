{
    "manifest_version": 3,
    "name": "VerifSol",
    "version": "1.0",
    "description": "Verify Solana-signed emails directly in Gmail",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://mail.google.com/*"],
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content/content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  